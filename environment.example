# Environment Configuration Example
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/cicd_monitoring?authSource=admin
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_PORT=3001
FRONTEND_PORT=3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WEBSOCKET_URL=http://localhost:3001
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-01

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=cicd-monitor@yourcompany.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Jenkins Integration
JENKINS_BASE_URL=http://localhost:8080
JENKINS_USERNAME=admin
JENKINS_TOKEN=your-jenkins-api-token
MONITORING_WEBHOOK_URL=http://localhost:3001/api/webhooks/jenkins

# Security Configuration
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=your-grafana-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/application.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Configuration
CACHE_TTL=300
MAX_CONCURRENT_BUILDS=100
METRICS_RETENTION_DAYS=90

# Development Configuration
DEBUG=cicd:*
ENABLE_SWAGGER=true
ENABLE_MOCK_DATA=false

# Production Configuration (override in production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_SWAGGER=false
# JWT_SECRET=super-secure-production-secret
# MONGODB_URI=mongodb://prod-user:prod-pass@prod-host:27017/cicd_monitoring
# REDIS_URL=redis://prod-redis:6379
